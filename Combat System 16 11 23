using System.Xml.Linq;
using System;

internal class Program
{
    private static void Main(string[] args)
    {
        int coin = 0;
        int exp = 0;
        int health = 100;
        int enemyHP1 = 100;
        int level = 1;
        Console.WriteLine("Welcome to the dungeon of Alpro");
        Console.Write("Whats your name adventurer :");
        string username = Convert.ToString(Console.ReadLine());
        Console.Clear();
        Start(username);
        
        

        FirstEncounter(level, health, enemyHP1, coin, exp, username);
    }
    private static void Start(string username)
    {
        

        Console.WriteLine("You are in a cold dark room, and you hear water dripping in the corner of the room");
        if (username == "")
        {
            Console.WriteLine("you dont even remember your name");
        }
        else
        {
            Console.WriteLine("you only remmeber that your name is " + username + " and nothing else");
        }
        Console.ReadKey();
        Console.Clear();

    }
    private static void FirstEncounter(int level, int health, int enemyHP, int coin, int exp, string username)
    {
        Console.WriteLine("you throw open the door and grabbed a rusty old sword, charging at the one who captured you");
        Console.WriteLine("He looks back at you.....");
        Console.ReadKey();

        Combat1(level, health, enemyHP, coin, exp, username);
    }
    private static void Combat1(int level, int health, int enemyHP1, int coin, int exp, string username)
    {
        
        while (health > 0 || enemyHP1 > 0)
         {
             if (enemyHP1 > 0)
             {
                Console.WriteLine("Enemy Guard Lvl 1");
                Console.WriteLine("HP :" + enemyHP1);
                Console.WriteLine("Defense : 0");
                Console.WriteLine();
                Console.WriteLine();
                Console.WriteLine(username);
                Console.WriteLine("HP :" + health + "Defense : 0");
                Console.WriteLine(" _________________________");
                Console.WriteLine("|  (1)Attack              |");
                Console.WriteLine("|                         |");
                Console.WriteLine("|  (2)Run      (3)Items   |");
                Console.WriteLine(" -------------------------");
                Console.WriteLine("Choose Action :");
                int ActionCombat1 = int.Parse(Console.ReadLine());
             } 
                 //Console.Clear();
                 //Console.ReadKey();
             if (ActionCombat1 == 1)
             {
                    enemyHP1 -= 10;
                    health -= 9;
                    Console.WriteLine("Enemy Got Hit");
                    Console.WriteLine("-10 HP");
                    Console.WriteLine("Enemy HP :" + enemyHP1);
                    Console.WriteLine("You got hit");
                    Console.WriteLine("-10 HP");
             }
             else if (ActionCombat1 == 2)
             {
               break;
             }

              if (enemyHP1 == 0)
              {
                coin += 5;
                exp += 10;
                Console.WriteLine("Guard Defeated....");
                Console.WriteLine("Potion collected");
                Console.WriteLine("Gold Coin :" + coin);
                Console.WriteLine("Exp :" + exp);
              }

                
         }
    }   
}
